                    </tr>

                </table>

                <table class="table table-bordered"> 

                    <thead>
                        <tr>
                            <th>Telefone</th>
                            <th>Rua</th>
                            <th>Bairro</th>
                            <th>CEP</th>
                            <th>Cidade</th>
                            <th>Estado</th>
                        </tr>
                    </thead>

                    <tr>
                        <td><%= paciente.telefone %></td>
                        <td><%= paciente.rua %></td>
                        <td><%= paciente.bairro %></td>
                        <td> <%= paciente.cep %></td>    
                        <td><%= paciente.cidade %> </td>
                        <td><%= paciente.estado %> </td>
                    </tr>
                </table>
            </div>
        </div>
        <a href="/admin">Voltar para a tela inicial</a>
