                        </tr>
                    </thead>

                    <tr>
                        <td><%= paciente.id %></td>
                        <td><%= paciente.nome %></td>
                        <td><%= paciente.email %></td>
                        <td><%= paciente.cpf %></td>
                        <td><%= paciente.data_nascimento %> </td>
